# LLM Edge Agent Configuration

# Server Configuration
SERVER_ADDRESS=0.0.0.0:8080
SERVER_TIMEOUT_SECONDS=30
MAX_REQUEST_SIZE=10485760  # 10MB

# TLS Configuration (optional)
ENABLE_TLS=false
TLS_CERT_PATH=/path/to/cert.pem
TLS_KEY_PATH=/path/to/key.pem

# Authentication
AUTH_ENABLED=true
# Comma-separated list of API keys (can be plain or SHA-256 hashed)
API_KEYS=your-api-key-1,your-api-key-2
AUTH_HEALTH_CHECK=false  # Require auth for health endpoints

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=1000  # Requests per minute
RATE_LIMIT_BURST=100  # Burst size

# Observability
ENABLE_TRACING=true
ENABLE_METRICS=true
LOG_LEVEL=info
# Optional: OpenTelemetry collector endpoint
OTLP_ENDPOINT=http://localhost:4317

# Rust Logging (optional, for development)
RUST_LOG=llm_edge_agent=debug,tower_http=debug
